{
  "name": "dnd-vibe",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform D&D vibe desktop + web app (React + Electron + Vite)",
  "main": "electron/main/index.js",
  "author": "",
  "license": "MIT",
  "packageManager": "yarn@4.10.2",
  "scripts": {
    "dev": "concurrently -k \"yarn:dev:renderer\" \"yarn:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "yarn build:renderer && yarn build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "typecheck": "tsc --noEmit",
    "lint": "yarn dlx @biomejs/biome lint src electron tests vite.config.ts",
    "lint:fix": "yarn dlx @biomejs/biome lint --apply src electron tests vite.config.ts && yarn dlx @biomejs/biome format --write src electron tests vite.config.ts",
    "format": "yarn dlx @biomejs/biome format src electron tests vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "package": "yarn build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.example.dndvibe",
    "productName": "DndVibe",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/main/**",
      "electron/preload/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main/index.js"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.5.0",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
